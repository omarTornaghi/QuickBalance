<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quickbalance">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickBalance">
        <activity android:name=".CambiaValutaActivity" android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NuovaOpActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".OpAggDataActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ImportaContattiActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ImpostazioniActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".StoricoActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CambiaImportoDebitiActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".CambiaImportoCreditiActivity"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>